<UserControl x:Class="Rouyan.Pages.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        
        <!-- 第一行 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- 第一列：现有的获取剪贴板内容按钮 -->
                <Button Grid.Column="0"
                        Content="获取剪贴板内容"
                        Padding="10,5"
                        FontSize="14"
                        Command="{s:Action GetClipboardContent}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="5"/>

                <!-- 第二列：选择文件按钮 -->
                <Button Grid.Column="1"
                     Content="选择文件"
                     Padding="10,5"
                     FontSize="14"
                     Command="{s:Action SelectFile}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="5"/>

                <!-- 第三列：TextBox -->
                <TextBox Grid.Column="2"
                         Text="{Binding SelectedFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Width="300"
                         Margin="10,0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFABABAB"
                         BorderThickness="1"/>
                
                <!-- 第四列：测试按钮 --><!--
                <Button Grid.Column="3"
                        Content="测试"
                        Padding="15,5"
                        FontSize="14"
                        Command="{s:Action Test}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>-->                         
        </StackPanel>
        <!-- 第二行 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="选择操作：" Height="30" Margin="0,11,5,0"></TextBlock>
            <!-- 左侧选择框 -->
            <ComboBox Grid.Column="0"
                      x:Name="OperationCombo"
                      Width="200"
                      Height="30"
                      Margin="5"
                      FontSize="14">
                <ComboBoxItem Content="RunLLMPrompt1"/>
                <ComboBoxItem Content="RunLLMPrompt1Streaming"/>
                <ComboBoxItem Content="RunLLMPrompt2"/>
                <ComboBoxItem Content="RunLLMPrompt2Streaming"/>
                <ComboBoxItem Content="RunVLMPrompt1"/>
                <ComboBoxItem Content="RunVLMPrompt1Streaming"/>
                <ComboBoxItem Content="RunVLMPrompt2"/>
                <ComboBoxItem Content="RunVLMPrompt2Streaming"/>
            </ComboBox>
            
            <!-- 右侧执行按钮 -->
            <Button Grid.Column="1"
                    Content="执行"
                    Padding="15,5"
                    FontSize="14"
                    Command="{s:Action Execute}"
                    CommandParameter="{Binding SelectedItem.Content, ElementName=OperationCombo}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="5"/>
        </StackPanel>
        <!-- 第三行 -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：TextBox用于显示文字 -->
            <TextBox Grid.Column="0"
                         Text="{Binding ClipboardText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,5,0"
                         FontSize="14"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         BorderBrush="#FFABABAB"
                         BorderThickness="1"
                         Padding="10,5"/>

            <!-- 右侧：图片区域，带有边框 -->
            <Border Grid.Column="1"
                        BorderBrush="#FFABABAB"
                        BorderThickness="1"
                        Margin="5,0,0,0"
                        Background="#FFF8F8F8">
                <Grid>
                    <!-- 背景提示文字 -->
                    <TextBlock Text="图片区域"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="#FF999999"
                                  FontSize="14"
                                  IsHitTestVisible="False"/>

                    <!-- 图片显示区 -->
                    <Image Source="{Binding ClipboardImage}"
                               Stretch="Uniform"
                               StretchDirection="DownOnly"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>