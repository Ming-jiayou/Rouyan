<UserControl x:Class="Rouyan.Pages.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
                <TextBlock Text="设置"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#2B579A"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
            
                <!-- Chat Model (LLM) 配置 -->
                <StackPanel Width="400" Margin="0,0,0,30">
                    <TextBlock Text="Chat Model (LLM) 配置" FontSize="18" FontWeight="Bold" Foreground="#2B579A" Margin="0,0,0,15"/>

                    <TextBlock Text="API Key:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ChatApiKey}"
                             Padding="8"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Base URL:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ChatBaseUrl}"
                             Padding="8"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Model:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ChatModel}"
                             Padding="8"
                             Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Vision Model (VLM) 配置 -->
                <StackPanel Width="400" Margin="0,0,0,30">
                    <TextBlock Text="Vision Model (VLM) 配置" FontSize="18" FontWeight="Bold" Foreground="#2B579A" Margin="0,0,0,15"/>

                    <TextBlock Text="API Key:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding VisionApiKey}"
                             Padding="8"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Base URL:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding VisionBaseUrl}"
                             Padding="8"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Model:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding VisionModel}"
                             Padding="8"
                             Margin="0,0,0,10"/>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button Content="💾 保存配置"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            Height="35"
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{s:Action SaveConfig}"/>
                </StackPanel>
               
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>