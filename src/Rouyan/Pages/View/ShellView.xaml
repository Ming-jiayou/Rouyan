<Window x:Class="Rouyan.Pages.View.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rouyan.Pages.View"
        xmlns:vm="clr-namespace:Rouyan.Pages.ViewModel"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Rouyan" Height="800" Width="1200"
        Icon="/Assets/福州肉燕.ico"
        xmlns:s="https://github.com/canton7/Stylet"
        Style="{StaticResource MaterialDesignWindow}"
        StateChanged="Window_StateChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 左侧导航菜单 -->
            <ColumnDefinition Width="200"/>
            <!-- 右侧内容区域 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧导航栏 -->
        <ContentControl Grid.Column="0" 
                        s:View.Model="{Binding HeaderViewModel}"/>
        
        <!-- 右侧内容区域 -->
        <ScrollViewer Grid.Column="1" 
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <ContentControl s:View.Model="{Binding ActiveItem}"/>
        </ScrollViewer>

        <!-- 系统托盘图标 -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                 IconSource="/Assets/福州肉燕.ico"
                 ToolTipText="Rouyan"
                 TrayLeftMouseDown="TrayIcon_TrayLeftMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="显示窗口" Click="ShowWindow_Click"/>
                    <Separator/>
                    <MenuItem Header="退出" Click="ExitApp_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>