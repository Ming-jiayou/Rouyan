<UserControl x:Class="Rouyan.Pages.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="关于应用" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#2B579A"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="这是一个帮助你阅读英文文献的小工具" 
                       FontSize="18" 
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,30"/>
            
            <TextBlock Text="版本: 1.0.0" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
                      
            
            <TextBlock Text="快捷键说明："
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 第一行：文本翻译 -->
                <TextBlock Grid.Column="0" Grid.Row="0"
                    Text="T + C："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="0"
                    Text="文本翻译"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <!-- 第二行：表格翻译 -->
                <TextBlock Grid.Column="0" Grid.Row="1"
                    Text="M + D："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="1"
                    Text="表格翻译"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <!-- 第三行：图片解释 -->
                <TextBlock Grid.Column="0" Grid.Row="2"
                    Text="E + I："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="2"
                    Text="图片解释"
                    FontSize="14"
                    Margin="0,0,0,5"/>
            </Grid>
                               
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🔙 返回首页" 
                        Padding="15,8"
                        Margin="0,0,10,0"
                        Command="{s:Action NavigateToHome}"/>
                        
                <Button Content="⚙️ 设置" 
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Command="{s:Action NavigateToSettings}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>