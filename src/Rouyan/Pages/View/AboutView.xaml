<UserControl x:Class="Rouyan.Pages.View.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="关于应用" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#2B579A"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="这是一个帮助你阅读英文文献的小工具" 
                       FontSize="18" 
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,30"/>
            
            <TextBlock Text="版本: 1.0.0" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="遇到任何问题或者任何意见，欢迎联系微信公众号：小铭同学的AI工具学习记录" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,30"/>


            <TextBlock Text="快捷键说明："
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LLM 提示词 -->
                <TextBlock Grid.Column="0" Grid.Row="0"
                    Text="Tab + K："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="0"
                    Text="RunLLMPrompt1"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <TextBlock Grid.Column="0" Grid.Row="1"
                    Text="Tab + L："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="1"
                    Text="RunLLMPrompt1Streaming"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <TextBlock Grid.Column="0" Grid.Row="2"
                    Text="Tab + U："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="2"
                    Text="RunLLMPrompt2"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <TextBlock Grid.Column="0" Grid.Row="3"
                    Text="Tab + I："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="3"
                    Text="RunLLMPrompt2Streaming"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <!-- VLM 提示词 -->
                <TextBlock Grid.Column="0" Grid.Row="4"
                    Text="Tab + S："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="4"
                    Text="RunVLMPrompt1"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <TextBlock Grid.Column="0" Grid.Row="5"
                    Text="Tab + D："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="5"
                    Text="RunVLMPrompt1Streaming"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <TextBlock Grid.Column="0" Grid.Row="6"
                    Text="Tab + W："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="6"
                    Text="RunVLMPrompt2"
                    FontSize="14"
                    Margin="0,0,0,5"/>

                <TextBlock Grid.Column="0" Grid.Row="7"
                    Text="Tab + E："
                    FontSize="14"
                    Margin="0,0,10,5"
                    FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Grid.Row="7"
                    Text="RunVLMPrompt2Streaming"
                    FontSize="14"
                    Margin="0,0,0,5"/>
            </Grid>
                               
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🔙 返回首页" 
                        Padding="15,8"
                        Margin="0,0,10,0"
                        Height="35"
                        Command="{s:Action NavigateToHome}"/>
                        
                <Button Content="⚙️ 设置" 
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Height="35"
                        Command="{s:Action NavigateToSettings}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>