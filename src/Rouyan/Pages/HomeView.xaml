<UserControl x:Class="Rouyan.Pages.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <!-- 第一行：获取剪贴板内容按钮 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="获取剪贴板内容" 
                        Padding="20,10"
                        FontSize="16"
                        Command="{s:Action GetClipboardContent}"
                        HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- 第二行：两列布局 - 左侧TextBox，右侧Image -->
            <Grid HorizontalAlignment="Center" Width="600" Height="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：TextBox用于显示文字 -->
                <TextBox Grid.Column="0"
                         Text="{Binding ClipboardText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="200"
                         Width="280"
                         Margin="0,0,10,0"
                         FontSize="14"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         BorderBrush="#FFABABAB"
                         BorderThickness="1"
                         Padding="10,5"/>
                
                <!-- 右侧：图片区域，带有边框 -->
                <Border Grid.Column="1"
                        BorderBrush="#FFABABAB"
                        BorderThickness="1"
                        Height="200"
                        Width="280"
                        Margin="10,0,0,0"
                        Background="#FFF8F8F8">
                    <Grid>
                        <!-- 背景提示文字 -->
                        <TextBlock Text="图片区域"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="#FF999999"
                                  FontSize="14"
                                  IsHitTestVisible="False"/>
                        
                        <!-- 图片显示区 -->
                        <Image Source="{Binding ClipboardImage}"
                               Stretch="Uniform"
                               StretchDirection="Both"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>